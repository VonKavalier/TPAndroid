<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="iut.paci.noelcommunity.LoginActivity"
    android:contentDescription="azaza">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@android:drawable/ic_secure"
        android:layout_marginLeft="120dp"
        android:layout_marginStart="120dp"
        android:layout_above="@+id/tvMdp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/ipPseudo"
        android:selectAllOnFocus="true"
        android:layout_below="@+id/tvPseudo"
        android:layout_alignLeft="@+id/tvPseudo"
        android:layout_alignStart="@+id/tvPseudo"
        android:layout_alignRight="@+id/ipMdp"
        android:layout_alignEnd="@+id/ipMdp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/ipMdp"
        android:layout_below="@+id/tvMdp"
        android:layout_alignLeft="@+id/tvMdp"
        android:layout_alignStart="@+id/tvMdp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/submitConnexion"
        android:id="@+id/butConnexion"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/ipMdp"
        android:layout_alignStart="@+id/ipMdp"
        android:layout_alignRight="@+id/ipMdp"
        android:layout_alignEnd="@+id/ipMdp"
        android:typeface="sans" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/tvPseudo"
        android:id="@+id/tvPseudo"
        android:layout_marginRight="175dp"
        android:layout_marginEnd="175dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/tvMdp"
        android:id="@+id/tvMdp"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/tvPseudo"
        android:layout_alignStart="@+id/tvPseudo" />

</RelativeLayout>
